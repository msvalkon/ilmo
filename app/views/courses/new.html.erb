<html>
	<head>
		<title> Adding a course </title>
	</head>
<body>
	<h1>Add a course</h1>
	<div id="add_course">
		<% form_for(@course) do |f| %>
			<%= f.error_messages %>
		<p>
		 	<%= f.label :name %><br /> 
			<%= f.text_field :name %> 
		</p>

		<p> 
			<%= f.label :description %><br /> 
			<%= f.text_area :description, :rows => 6 %> 
		</p> 

		<p>
			<%= f.submit 'Create' %>
		</p>

		<%end%>
	</div>
		
	<%= link_to "Back!", courses_path%>
	